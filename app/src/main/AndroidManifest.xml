<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tmg.hourglass">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="tmg.hourglass.HourGlassApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/LightTheme">

        <activity
            android:name="tmg.hourglass.SplashActivity"
            android:theme="@style/LightTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="tmg.hourglass.home.HomeActivity" />

        <activity android:name="tmg.hourglass.modify.ModifyActivity" />

        <activity android:name="tmg.hourglass.settings.SettingsActivity" />

        <activity android:name="tmg.hourglass.settings.release.ReleaseActivity" />

        <activity android:name="tmg.hourglass.settings.privacy.PrivacyPolicyActivity" />

        <activity android:name="tmg.components.about.AboutThisAppActivity"
            android:theme="@style/DarkTheme" />

        <!-- Widget -->

        <!-- Bar Dark -->

        <activity android:name=".widget.bar.dark.WidgetBarDarkPickerActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".widget.bar.dark.WidgetBarDarkProvider"
            android:label="@string/widget_label_dark">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_dark" />
        </receiver>

        <!-- Bar Light -->

        <activity android:name="tmg.hourglass.widget.bar.light.WidgetBarLightPickerActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <receiver
            android:name="tmg.hourglass.widget.bar.light.WidgetBarLightProvider"
            android:label="@string/widget_label_light">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_light" />
        </receiver>

        <!-- Circle Dark -->

        <activity android:name="tmg.hourglass.widget.circle.light.WidgetCircleLightPickerActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <receiver
            android:name="tmg.hourglass.widget.circle.light.WidgetCircleLightProvider"
            android:label="@string/widget_label_light">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_circle_light" />
        </receiver>

        <!-- Circle Light -->

        <activity android:name="tmg.hourglass.widget.circle.dark.WidgetCircleDarkPickerActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <receiver
            android:name="tmg.hourglass.widget.circle.dark.WidgetCircleDarkProvider"
            android:label="@string/widget_label_dark">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_circle_dark" />
        </receiver>


    </application>

</manifest>