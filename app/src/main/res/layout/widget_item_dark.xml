<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_widget_dark"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/paddingSmall"
    android:paddingTop="@dimen/paddingSmall"
    android:paddingEnd="@dimen/paddingSmall"
    android:paddingBottom="@dimen/paddingSmall">

    <TextView
        android:id="@+id/title"
        style="@style/Text.Widget.Dark.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/value"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/paddingSmall"
        android:layout_toStartOf="@id/value"
        android:ellipsize="end"
        android:gravity="start|center"
        android:lines="1"
        tools:text="Car mileage" />

    <TextView
        android:id="@+id/value"
        style="@style/Text.Widget.Dark.Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        tools:text="38,400 mi" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:progressBackgroundTint="#d8d8d8"
        android:progressTint="@color/brand"
        tools:progress="50" />

    <TextView
        android:id="@+id/updatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_alignParentEnd="true"
        style="@style/Text.Widget.Dark.Subtitle"
        tools:text="Updated at 11:23 20th March 2019" />

</RelativeLayout>