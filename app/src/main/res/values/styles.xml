<resources>

    <style name="Launcher" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <!-- Text -->

    <style name="Text">
        <item name="android:textColor">?attr/pTextPrimary</item>
    </style>

    <style name="Text.Header">
        <item name="android:textColor">?attr/pTextPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Header.Collapsed">
        <item name="android:textColor">?attr/pTextPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Item" />

    <style name="Text.Item.Title">
        <item name="android:textColor">?attr/pTextPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Item.Description">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Item.Labels">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Modify" />

    <style name="Text.Modify.Title">
        <item name="android:textColor">?attr/pTextPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Modify.Save">
        <item name="android:textColor">?attr/pTextInversePrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Modify.FieldTitle">
        <item name="android:textColor">?attr/pTextPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Modify.FieldDescription">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Modify.FieldValue">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Modify.Type.Header" parent="Text">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Modify.Type.Item" parent="Text">
        <item name="android:textColor">?attr/pTextSecondary</item>
    </style>

    <style name="Text.Settings" />

    <style name="Text.Settings.PageTitle">
        <item name="android:textColor">?attr/pTextPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Settings.Header">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Settings.Title">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Settings.Description">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.ReleaseNotes" />

    <style name="Text.ReleaseNotes.Title">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.ReleaseNotes.Description">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widgets" />

    <style name="Text.Widget.Light.Title" parent="Widgets">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#383838</item>
    </style>

    <style name="Text.Widget.Light.Subtitle" parent="Widgets">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#b8b8b8</item>
    </style>

    <style name="Text.Widget.Light.Value" parent="Widgets">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#383838</item>
    </style>


    <style name="Text.Widget.Light.Small.Value" parent="Widgets">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#383838</item>
    </style>

    <style name="Text.Widget.Dark.Title" parent="Widgets">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#efefef</item>
    </style>

    <style name="Text.Widget.Dark.Subtitle" parent="Widgets">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#b8b8b8</item>
    </style>

    <style name="Text.Widget.Dark.Value" parent="Widgets">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#efefef</item>
    </style>

    <style name="Text.Widget.Dark.Small.Value" parent="Widgets">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#efefef</item>
    </style>

</resources>