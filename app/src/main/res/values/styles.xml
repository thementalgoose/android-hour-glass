<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#AD1457</item>
        <item name="colorPrimaryDark">?attr/pBackgroundPrimary</item>
        <item name="colorAccent">#AD1457</item>

        <item name="colorPrimaryAlpha">#88AD1457</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="pTextPrimary">#181818</item>
        <item name="pTextSecondary">#383838</item>
        <item name="pTextInversePrimary">#fbfbfb</item>
        <item name="pTextInverseSecondary">#e8e8e8</item>

        <item name="pBackgroundPrimary">#ffffff</item>
        <item name="pBackgroundSecondary">#f8f8f8</item>
        <item name="pBackgroundInversePrimary">#181818</item>
        <item name="pBackgroundInverseSecondary">#383838</item>

        <item name="pEditTextBackground">#e8e8e8</item>
    </style>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#AD1457</item>
        <item name="colorPrimaryDark">?attr/pBackgroundPrimary</item>
        <item name="colorAccent">#AD1457</item>

        <item name="colorPrimaryAlpha">#88AD1457</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="pTextPrimary">#fbfbfb</item>
        <item name="pTextSecondary">#e8e8e8</item>
        <item name="pTextInversePrimary">#181818</item>
        <item name="pTextInverseSecondary">#383838</item>

        <item name="pBackgroundPrimary">#181818</item>
        <item name="pBackgroundSecondary">#383838</item>
        <item name="pBackgroundInversePrimary">#ffffff</item>
        <item name="pBackgroundInverseSecondary">#f8f8f8</item>

        <item name="pEditTextBackground">#282828</item>
    </style>

    <style name="LightTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />
    <style name="LightTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="LightTheme.Launcher" parent="@style/Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>


    <!-- Text -->

    <style name="Text">
        <item name="android:textColor">?attr/pTextPrimary</item>
    </style>

    <style name="Text.Header">
        <item name="android:textColor">?attr/pTextPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Item" />

    <style name="Text.Item.Title">
        <item name="android:textColor">?attr/pTextPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Item.Description">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Item.Labels">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Modify" />

    <style name="Text.Modify.Title">
        <item name="android:textColor">?attr/pTextPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Modify.Save">
        <item name="android:textColor">?attr/pTextInversePrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Modify.FieldTitle">
        <item name="android:textColor">?attr/pTextPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Modify.FieldDescription">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Modify.FieldValue">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Modify.Type.Header" parent="Text">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Modify.Type.Item" parent="Text">
        <item name="android:textColor">?attr/pTextSecondary</item>
    </style>

    <style name="Text.Settings" />

    <style name="Text.Settings.PageTitle">
        <item name="android:textColor">?attr/pTextPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Settings.Header">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Settings.Title">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Settings.Description">
        <item name="android:textColor">?attr/pTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>